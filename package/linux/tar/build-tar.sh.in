#!/bin/bash

set -e

ROOT_DIR=${BULLDOZER_ROOT_DIR}
BIN_DIR=${BULLDOZER_BIN_BASE_DIR}/${CONFIGURATION_SUFFIX}
OUT_DIR=${BULLDOZER_PACKAGE_DIR}
TAR_DIR=${CMAKE_CURRENT_BINARY_DIR}/tar
TAR_SUB_DIR=bulldozer-${VERSION_FILE_SUFFIX}
CONTENTS_DIR=$TAR_DIR/$TAR_SUB_DIR
OUT_FILE_NAME=bulldozer-linux-${VERSION_FILE_SUFFIX}-${TARGET_CPU}.tar.gz
OUT_FILE_PATH=$OUT_DIR/$OUT_FILE_NAME

echo Building archive $OUT_FILE_NAME...

rm -rf $TAR_DIR
rm -f $OUT_FILE_PATH

mkdir -p $CONTENTS_DIR/bin
mkdir -p $CONTENTS_DIR/cmake
mkdir -p $CONTENTS_DIR/include
mkdir -p $CONTENTS_DIR/frame
mkdir -p $CONTENTS_DIR/samples
mkdir -p $OUT_DIR

cp -f $BIN_DIR/bulldozer $CONTENTS_DIR/bin
cp -f $ROOT_DIR/package/cmake/*.* $CONTENTS_DIR/cmake
cp -f $ROOT_DIR/cmake/bulldozer-step.cmake $CONTENTS_DIR/cmake
cp -rf $ROOT_DIR/include $CONTENTS_DIR
cp -rf $ROOT_DIR/frame $CONTENTS_DIR
cp -rf $ROOT_DIR/samples $CONTENTS_DIR

tar -czf $OUT_FILE_PATH -C $TAR_DIR $TAR_SUB_DIR
rm -rf $TAR_DIR
